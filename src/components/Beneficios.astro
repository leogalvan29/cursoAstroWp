---
const token = import.meta.env.TOKEN

const response = await fetch('https://programadorculiacan.com/wp-json/wp/v2/beneficios?acf_format=standard' ,{
	method:'GET',
	headers:{
		'Authorization':`Bearer ${token}`, 
		'Content-Type':'application/json'
	}
}) 
const data = await response.json()  

//console.log(data)
const { titulo_beneficios , descripcion_beneficios, titulo_2_beneficios } = Astro.props
//console.log(Astro.props)
